{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessagePrefix": "build:",
  "enabledManagers": [ "gradle" ],
  "labels": [ "dependencies" ],
  "ignoreDeps": [
    "net.minecraftforge:forge",
    "net.minecraftforge.gradle"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^org.jetbrains.kotlin(?!x)"
      ],
      "allowedVersions": "<=1.5"
    }
  ]
}